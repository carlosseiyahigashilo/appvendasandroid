#:import utils kivy.utils
<FotoPerfilPage>:
    FloatLayout:
        canvas:
            Rectangle:
                pos: self.pos
                size: self.size
                source: "icones/bg1.png"
        Label:
            pos_hint: {"right": 0.85, "top": 0.95}
            size_hint: 0.7, 0.1
            bold: True
            text: "Selecione Sua Foto de Perfil"
        
        # lista de imagens
        ScrollView:
            pos_hint: {"right": 0.9, "top":0.85}
            size_hint: 0.8, 0.73
            GridLayout:
                cols: 3
                id: lista_fotos_perfil
                size_hint_y: None
                spacing: 5, 5
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True



        # bot√£o Voltar
        FloatLayout:
            pos_hint: {"right": 1, "top": 0.12}
            size_hint: 1, 0.12
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#006D7E")
                Rectangle:
                    pos: self.pos
                    size: self.size
            ImageButton:
                pos_hint: {"right": 0.2, "top": 0.9}
                size_hint: 0.2, 0.8 
                source: "icones/voltar.png"
                on_release: app.mudar_tela("ajustespage")